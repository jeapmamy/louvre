{# src/JV/CoreBundle/Resources/views/Billetterie/confirmation.html.twig #}

{% extends "::layout.html.twig" %}

{% block title %}
  {{ parent() }} - Confirmation
{% endblock %}

{% block body %}

<div class="row">
	<div class="col-md-2">
		<h3>Les étapes</h3>
		<ul class="nav nav-pills nav-stacked">
			<li><a href="#" class="menuCorps">1 - Réservation <i class="glyphicon glyphicon-ok pull-right"></i></a></li>
			<li><a href="#" class="menuCorps">2 - Coordonnées <i class="glyphicon glyphicon-ok pull-right"></i></a></li>
			<li><a href="#" class="menuCorps">3 - Paiement <i class="glyphicon glyphicon-ok pull-right"></i></a></li>
			<li><a href="#" class="menuCorps">4 - Confirmation <i class="glyphicon glyphicon-ok pull-right"></i></a></li>
		</ul>
	</div>
	<div id="content" class="col-md-offset-1 col-md-9">

		<h3>Confirmation</h3>

		<div>
			{% for style, message in app.session.flashbag.get('success') %}
				{%if style == 'success'%} {% set type = 'success' %} {%endif%}
					<div class="alert alert-{{ type }}">
						<p>{{ message }}</p>
					</div>
			{% endfor %}
		</div>

		<div>
			{% for style, message in app.session.flashbag.get('error') %}
				{%if style == 'error'%} {% set type = 'danger' %} {%endif%}
					<div class="alert alert-{{ type }}">
						<p><strong>Attention : </strong>{{ message }}</p>
					</div>
			{% endfor %}
		</div>
	</div>
</div>

{% endblock %}

{% block script %}
	<script>

	</script>
{% endblock %}