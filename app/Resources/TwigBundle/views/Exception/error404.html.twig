{# app/Resources/TwigBundle/views/Exception/error404.html.twig #} 

{% extends "::layout.html.twig" %} 

{% block title %} 
	{{ parent() }} - Erreur404
{% endblock %} 

{% block body %}

	<div class="row">
		<div class="col-md-2">

		</div>

		<div id="content" class="col-md-offset-1 col-md-9">

			<h3>Erreur !!!</h3>

			<div class="erreur">
				<h4>Oops! Une erreur s'est produite durant le chargement de la page</h4>

				<h4>Notre application a retourné une erreur {{ status_code }} : {{ status_text }}.</h4>
