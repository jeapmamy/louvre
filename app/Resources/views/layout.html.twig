{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>{% block title %}Le Louvre{% endblock %}</title>

	{% block stylesheets %} {# On charge le CSS de bootstrap depuis le site directement #}
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/ui-lightness/jquery-ui.css">
	<link rel="stylesheet" href="../bundles/css/style.css">
	<style>
		/*
		.jumbotron {
			color: #fff;
			background-color: #5bc0de;
			text-align: center;
		}
		
		footer {
			padding: 10px 0 20px 0;
			text-align: center;
			bottom: 0px;
			width:100%;
			height: 50px;
		}
		*/
	</style>
	{% endblock %}
	
	{% block style %}
	
	{% endblock %}
</head>

<body>
	<div class="container">
		<div id="header" class="jumbotron">
			<h1>Musée du Louvre</h1>
		</div>

		<div class="row">
			<div id="menu" class="col-md-2">
				<ul class="nav nav-pills nav-stacked">
					<li><a href="{{ path('jv_core_home') }}">Accueil</a></li>
				</ul>
				<h3>Les étapes</h3>
				<ul class="nav nav-pills nav-stacked">
					<li><a href="{{ path('jv_core_reservation') }}">1 - Réservation</a></li>
					<li><a href="{{ path('jv_core_coordonnees') }}">2 - Coordonnées</a></li>
					<!--<li><a href="{{ path('jv_core_recapitulatif') }}">Récapitulatif</a></li>-->
					<li><a href="#">3 - Paiement</a></li>
					<li><a href="#">4 - Confirmation</a></li>
				</ul>
			</div>
			<div id="content" class="col-md-offset-1 col-md-9">
				{% block body %} {% endblock %}
			</div>
		</div>

		<hr>

		<footer>
			<p>Musée du Louvre - {{ 'now'|date('Y') }} - Paris</p>
		</footer>
	</div>

	{% block javascripts %} 
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<script src="../bundles/js/main.js"></script>
	{% endblock %}
	
	{% block script %}
	{% endblock %}

</body>

</html>
